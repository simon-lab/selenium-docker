{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Runner",
            "request": "launch",
            "mainClass": "com.saimen.testrunner.Runner",
            "projectName": "selenium-docker"
        },
        {
            "type": "java",
            "name": "TestRunner",
            "request": "launch",
            "mainClass": "com.saimen.testrunner.TestRunner",
            "projectName": "selenium-docker"
        },
        {
            "type": "java",
            "name": "Debug TestNG Suite",
            "request": "launch",
            "mainClass": "org.testng.TestNG",
            "args": [
                "src/test/resources/test-suites/flight-reservation.xml"
            ],
            "classPaths": [
                "${workspaceFolder}/target/classes",
                "${workspaceFolder}/target/test-classes",
                "${workspaceFolder}/.m2/repository"
            ]
        }
    ]
}